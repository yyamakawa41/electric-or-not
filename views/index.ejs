<% include head %>

<body>

<header>
	<% include header %>
</header>

<p>Pick a Winner</p>

<% var random = Math.floor(Math.random()*photos.length) %>
<% var random2 = Math.floor(Math.random()*photos.length) %>

	<div id="leftContainer">
		<img src="<%= photos[random].imagePath %>">
		<form class='vote-button' action='./winners' method="post">
			<input type="hidden" name='srcWinner' value='<%=photos[random].imagePath%>'>
			<input type="hidden" name='srcLoser' value='<%=photos[random2].imagePath%>'>

			<button id='leftBtn' class='btn btn-success'>Winner</button>
		</form>
	</div>
	
	<div id="rightContainer">
		<img src="<%= photos[random2].imagePath %>">
		<form class='vote-button' action='./winners' method="post">
			<input type="hidden" name='srcWinner' value='<%=photos[random2].imagePath%>'>
			<input type="hidden" name='srcLoser' value='<%=photos[random].imagePath%>'>

			<button id='rightBtn' class='btn btn-primary'>Winner</button>
		</form>
	</div>

<footer>
	<% include footer %>
</footer>
	
</body>
</html>
